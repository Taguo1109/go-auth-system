{
    "swagger": "2.0",
    "info": {
        "description": "登入系統的RESTful API接口文檔",
        "title": "登入系統API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.example.com/support",
            "email": "support@example.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/err/assertion-panic": {
            "get": {
                "description": "故意觸發 panic 來驗證全域錯誤攔截器是否生效",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Debug"
                ],
                "summary": "測試 panic",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/err/nil-panic": {
            "get": {
                "description": "故意觸發 panic 來驗證全域錯誤攔截器是否生效",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Debug"
                ],
                "summary": "測試 panic",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/err/slice-panic": {
            "get": {
                "description": "故意觸發 panic 來驗證全域錯誤攔截器是否生效",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Debug"
                ],
                "summary": "測試 panic",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/err/test-panic": {
            "get": {
                "description": "故意觸發 panic 來驗證全域錯誤攔截器是否生效",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Debug"
                ],
                "summary": "測試 panic",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "登入並取得 JWT Token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "使用者登入",
                "parameters": [
                    {
                        "description": "登入資訊",
                        "name": "login",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserLoginDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "description": "清除使用者的 access_token 和 refresh_token cookie",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "使用者登出",
                "responses": {
                    "200": {
                        "description": "成功登出訊息",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/refresh": {
            "post": {
                "description": "重新取得Token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "重新獲取Token",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "新增一個使用者帳號",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "使用者註冊",
                "parameters": [
                    {
                        "description": "使用者資訊（Email、Username、Password、Role 為必填）",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserRegisterDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        },
        "/user/profile": {
            "get": {
                "description": "登入後獲取資料",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "獲取基本資料",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/utils.JsonResult"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.UserLoginDTO": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "models.UserRegisterDTO": {
            "type": "object",
            "required": [
                "email",
                "password",
                "role",
                "username"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "test@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "P@ssw0rd"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "User",
                        "Admin",
                        "SuperAdmin"
                    ],
                    "example": "User"
                },
                "username": {
                    "type": "string",
                    "example": "testUser01"
                }
            }
        },
        "utils.JsonResult": {
            "type": "object",
            "properties": {
                "data": {},
                "msg": {},
                "msg_detail": {
                    "type": "string"
                },
                "status_code": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "請求頭中必須添加 Authorization Bearer {token}，例如 \"Authorization: Bearer abcxyz\"",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}